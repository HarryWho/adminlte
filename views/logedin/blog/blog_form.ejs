<form action="<%= action %>" method="post">

  <div class="form-group">
    <label>Blog Title</label>
    <input type="text" class="form-control" name="title" placeholder="Blog Title" value="<%- typeof blog!='undefined' ? blog.title: '' %>">
  </div>
  <div class="form-group">
    <label>Status</label>
    <select name="status" class="form-control" id="status">
        <option value="public" <%- typeof blog!='undefined' ? blog.status=='public' ? 'selected' : '' : '' %>>Public</option>
        <option value="private" <%- typeof blog!='undefined' ? blog.status=='private' ? 'selected' : '' : '' %>>Private</option>
    </select>
  </div>

  <!-- textarea -->
  <div class="form-group">
    <label>Blog</label>
    <textarea class="form-control" rows="3" id="blog" name='blog' placeholder="Blog Content"><%- typeof blog!='undefined' ? blog.blog: '' %></textarea>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary"><%=caption%></button>
  </div>
</form>

<script src="/plugins/ckeditor/ckeditor.js"></script>

<script>
  CKEDITOR.replace('blog')
</script>